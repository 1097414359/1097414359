struct book
{
	char name[20];
	short price;

};
#include<string.h>
int main()
{
	struct book b1 = { "C语言程序设计", 20 };
	printf("书名：%s\n", b1.name);
	printf("价格：%d元\n", b1.price);
	b1.price = 15;
	printf("修改后的价格：%d元\n", b1.price);
	struct book* pb = &b1;
	printf("%s\n", (*pb).name);
	printf("%d\n", (*pb).price);
	printf("%s\n", pb->name);
	printf("%d\n", pb->price);
	strcpy(b1.name, "c++");
	printf("%s\n", b1.name);

	return 0;
}
